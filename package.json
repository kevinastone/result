    "eslint": "^6.8.0",
    "jest": "^25.2.7",
    "jest-matcher-utils": "^25.2.7",
    "prettier": "^2.0.2",
    "rimraf": "^3.0.2",
    "ts-jest": "^25.3.1",
    "typescript": "^4.0"
