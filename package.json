  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kevinastone/result"
  },
  "scripts": {
    "build": "tsc -p tsconfig.dist.json",
    "clean": "rimraf dist",
